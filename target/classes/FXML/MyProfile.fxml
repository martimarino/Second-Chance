                       <font>
                           <Font size="24.0" />
                       </font>
                   </Text>
                  <Separator layoutX="261.0" layoutY="325.0" prefWidth="200.0" />
                  <Pane layoutX="29.0" layoutY="15.0" prefHeight="44.0" prefWidth="200.0">
                     <children>
                        <Text fx:id="balanceValue" fill="#2582bf" layoutX="100.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="" />
