                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <Button fx:id="refreshBtn" layoutX="153.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#updateUserBalance">
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0">
                                 <image>
                                    <Image url="@../img/refresh.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </Pane>
                  <BorderPane fx:id="review" layoutX="10.0" layoutY="408.0" prefHeight="309.0" prefWidth="680.0">
