<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: rgb(230, 230, 255);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.it.unipi.dii.largescale.secondchance.controller.StatsController">
   <children>
      <!-- Page title -->
      <Label layoutX="321.0" layoutY="16.0" text="Stats Section" textAlignment="CENTER" textFill="#b936e4">
      <font>
            <Font size="24.0" />
         </font>
      </Label>
      <!-- Content box -->
      <VBox prefHeight="400.0" prefWidth="800.0" translateX="80.0" layoutY="50.0" spacing="10.0">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Specify the parameters:" underline="true">
            <font>
               <Font size="16.0" />
            </font>
         </Text>
         <HBox prefHeight="400.0" prefWidth="800.0" spacing="50.0" translateY="10.0">   <!-- Set parameters -->
            <VBox spacing="20.0">
               <Label text="Insert the Top K number:" />
               <Label text="Insert the category you want:" />
               <Label text="Please insert the country you want:" />
            </VBox>
            <VBox spacing="10.0" translateY="-5.0">
               <TextField fx:id="boxKNumber" alignment="CENTER" prefHeight="26.0" prefWidth="57.0" promptText="K" />
               <TextField fx:id="txtFieldCountry" alignment="CENTER" prefHeight="26.0" prefWidth="114.0" promptText="Country" />
               <TextField fx:id="txtFieldCategory" alignment="CENTER" prefHeight="26.0" prefWidth="114.0" promptText="Category" />
            </VBox>
         </HBox>
         <Label text="Select the query do you want to perform:" style="-fx-font-weight: bold;" underline="true" translateY="-10.0">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
         <HBox prefHeight="400.0" prefWidth="800.0" spacing="20.0" translateY="-10.0">
            <VBox spacing="10.0">   <!-- MongoDB stats -->
               <RadioButton fx:id="rBTopKUsers" mnemonicParsing="false" text="Top K Rated User (by country) " toggleGroup="$TopK">
                  <toggleGroup>
                     <ToggleGroup fx:id="TopK" />
                  </toggleGroup>
               </RadioButton>
               <RadioButton fx:id="rBTopKInterestingIns" mnemonicParsing="false" text="Top K Most Interesting Insertions (by category) " toggleGroup="$TopK" />
               <RadioButton fx:id="rBTopKViewedIns" mnemonicParsing="false" text="Top K Most Viewed Insertions (by category) " toggleGroup="$TopK" />
               <RadioButton fx:id="rBUsers" mnemonicParsing="false" prefHeight="17.0" text="Users with more purchases" toggleGroup="$TopK" />
               <RadioButton fx:id="rBSellers" mnemonicParsing="false" prefHeight="21.0" text="Users with more sold" toggleGroup="$TopK" />
            </VBox>
            <VBox spacing="10.0">   <!-- Neo4j stats -->
               <RadioButton fx:id="followedUsers" mnemonicParsing="false" prefHeight="17.0" text="Most followed users" toggleGroup="$TopK"/>
               <RadioButton fx:id="categoryInsertion" mnemonicParsing="false" prefHeight="21.0" text="Interesting for category" toggleGroup="$TopK" />
               <RadioButton fx:id="postedCountry" mnemonicParsing="false" prefHeight="21.0" text="Number of posted insertion for country" toggleGroup="$TopK" />
            </VBox>
         </HBox>
         <!-- Process stats button -->
         <Button fx:id="elaboraButton" translateX="250.0" translateY="-10.0" mnemonicParsing="false" onMouseClicked="#redirectToStatFunction" style="-fx-background-color: rgb(206, 153, 255)rgb(206, 153, 255); -fx-background-radius: 50;" text="Process results" textFill="#fffffff0" />
      </VBox>
   </children>
</AnchorPane>
