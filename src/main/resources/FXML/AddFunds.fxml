<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.AddFundsController">
   <children>
      <Label layoutX="205.0" layoutY="14.0" text="Add Funds to your wallet!">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Separator layoutX="201.0" layoutY="274.0" prefWidth="200.0" />
      <Label layoutX="208.0" layoutY="296.0" text="Your new account balance is: ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="263.0" layoutY="333.0" text="Balance here!" />
      <Pane layoutX="14.0" layoutY="65.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label layoutX="14.0" layoutY="6.0" text="Select the amount you want:" />
            <RadioButton fx:id="radioBtn10" layoutX="23.0" layoutY="34.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="10€">
               <font>
                  <Font size="11.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="amount" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioBtn25" layoutX="23.0" layoutY="94.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="25€" toggleGroup="$amount">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radioBtn50" layoutX="23.0" layoutY="124.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="50€" toggleGroup="$amount">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radioBtn100" layoutX="23.0" layoutY="154.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="100€" toggleGroup="$amount">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radioBtn20" layoutX="23.0" layoutY="64.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="20€" toggleGroup="$amount">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radioBtn200" layoutX="103.0" layoutY="34.0" mnemonicParsing="false" onMouseClicked="#activeRequestBtn" text="200€" toggleGroup="$amount">
               <font>
                  <Font size="11.0" />
               </font>
            </RadioButton>
         </children>
      </Pane>
      <Pane layoutX="369.0" layoutY="58.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label layoutX="-3.0" layoutY="49.0" text="Or if you have a code, insert here:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txtFieldCode" layoutX="25.0" layoutY="100.0" />
         </children>
      </Pane>
      <Button fx:id="btnDeposit" layoutX="271.0" layoutY="232.0" mnemonicParsing="false" onMouseClicked="#deposit" text="Deposit" />
   </children>
</AnchorPane>
