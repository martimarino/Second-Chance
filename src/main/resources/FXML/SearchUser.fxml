<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="anchorRoot"
            prefHeight="820.0" prefWidth="680.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.controller.SearchUserController">
    <children>
                                            <!-- Search users -->
        <Text fill="#2582bf" layoutX="297.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Find Users">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <!-- Search bar and button -->
        <TextField fx:id="us" layoutX="28.0" layoutY="81.0" prefWidth="560" promptText="Search users" />
        <Button fx:id="findUsers" alignment="CENTER" contentDisplay="RIGHT" layoutX="597.0" layoutY="80.0" mnemonicParsing="false" onMouseClicked="#findUsers" prefHeight="20.0" prefWidth="70.0" style="-fx-background-color: none; -fx-border-color: black; -fx-border-radius: 5;" text="Search" />
        <!-- Filters options -->
        <ComboBox fx:id="country" layoutX="35.0" layoutY="130.0" prefHeight="25.0" prefWidth="105.0" value="country">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Italy" />
                    <String fx:value="Netherlands" />
                    <String fx:value="Spain" />
                    <String fx:value="Austria" />
                    <String fx:value="Poland" />
                    <String fx:value="Ireland" />
                    <String fx:value="France" />
                    <String fx:value="Canada" />
                    <String fx:value="United Kingdom (Great Britain)" />
                    <String fx:value="Brazil" />
                </FXCollections>
            </items>
        </ComboBox>
        <ComboBox fx:id="rating" layoutX="140.0" layoutY="130.0" prefWidth="100.0" value="rating">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1" />
                    <String fx:value="2" />
                    <String fx:value="3" />
                    <String fx:value="4" />
                    <String fx:value="5" />
                </FXCollections>
            </items>
        </ComboBox>
        <!-- Searched and filtered users results -->
        <BorderPane fx:id="userFind" layoutX="200.0" layoutY="200.0" prefHeight="307.0" prefWidth="290.0">
            <left>
                <Pane fx:id="prevButton" onMouseClicked="#showPrevUser" translateY="100.0">
                    <ImageView fitHeight="50.0" fitWidth="50.0" BorderPane.alignment="CENTER" >
                        <image>
                            <Image url="@../img/prev.png"/>
                        </image>
                    </ImageView>
                </Pane>
            </left>
            <right>
                <Pane fx:id="nextButton" onMouseClicked="#showNextUser" translateY="100.0">
                    <ImageView fitHeight="50.0" fitWidth="50.0" BorderPane.alignment="CENTER" >
                        <image>
                            <Image url="@../img/next.png"/>
                        </image>
                    </ImageView>
                </Pane>
            </right>
        </BorderPane>
        <Text fill="#2582bf" layoutX="260.0" layoutY="470.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Suggested sellers">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <BorderPane fx:id="userSugg" layoutX="50.0" layoutY="500.0" prefHeight="307.0" prefWidth="600.0">
            <left>
                <Pane fx:id="prevSugg" onMouseClicked="#prevSuggestedUsers" translateY="100.0">
                    <ImageView fitHeight="50.0" fitWidth="50.0" BorderPane.alignment="CENTER" >
                        <image>
                            <Image url="@../img/prev.png"/>
                        </image>
                    </ImageView>
                </Pane>
            </left>
            <right>
                <Pane fx:id="nextSugg" onMouseClicked="#nextSuggestedUsers" translateY="100.0">
                    <ImageView fitHeight="50.0" fitWidth="50.0" BorderPane.alignment="CENTER" >
                        <image>
                            <Image url="@../img/next.png"/>
                        </image>
                    </ImageView>
                </Pane>
            </right>
        </BorderPane>
    </children>
</AnchorPane>
